{
  "profile_name": "gamer",
  "description": "Perfil para gaming y entretenimiento",
  "version": "1.0.0",
  "author": "Usuario",
  "enabled_modules": ["hand_detection", "arm_detection", "voice_recognition"],
  
  "gestures": {
    "hand_gestures": {
      "fist": {
        "action": "keyboard",
        "command": "ctrl+f",
        "description": "Abrir búsqueda en juego",
        "enabled": true
      },
      "peace": {
        "action": "keyboard",
        "command": "esc",
        "description": "Abrir menú/pausa",
        "enabled": true
      },
      "thumbs_up": {
        "action": "bash",
        "command": "xdotool key F11",
        "description": "Pantalla completa",
        "enabled": true
      },
      "thumbs_down": {
        "action": "bash",
        "command": "xdotool key alt+tab",
        "description": "Cambiar ventana",
        "enabled": true
      },
      "rock": {
        "action": "keyboard",
        "command": "ctrl+s",
        "description": "Guardar partida",
        "enabled": true
      }
    },
    
    "arm_gestures": {
      "arms_crossed": {
        "action": "bash",
        "command": "xdotool getactivewindow windowkill",
        "description": "Cerrar ventana/juego",
        "enabled": true
      },
      "arms_up": {
        "action": "bash",
        "command": "amixer set Master 10%+",
        "description": "Subir volumen",
        "enabled": true
      },
      "arms_down": {
        "action": "bash",
        "command": "amixer set Master 10%-",
        "description": "Bajar volumen",
        "enabled": true
      },
      "left_arm_up": {
        "action": "keyboard",
        "command": "ctrl+tab",
        "description": "Siguiente pestaña",
        "enabled": true
      },
      "right_arm_up": {
        "action": "keyboard",
        "command": "ctrl+shift+tab",
        "description": "Pestaña anterior",
        "enabled": true
      }
    }
  },
  
  "voice_commands": {
    "nyx abre discord": {
      "action": "bash",
      "command": "discord",
      "description": "Abrir Discord",
      "enabled": true
    },
    "nyx captura pantalla": {
      "action": "bash",
      "command": "gnome-screenshot",
      "description": "Tomar screenshot",
      "enabled": true
    },
    "nyx graba eso": {
      "action": "bash",
      "command": "xdotool key ctrl+shift+r",
      "description": "Iniciar grabación",
      "enabled": true
    },
    "nyx cierra ventana": {
      "action": "window",
      "command": "close",
      "description": "Cerrar ventana actual",
      "enabled": true
    }
  },
  
  "settings": {
    "sensitivity": 7,
    "response_time": 0.3,
    "require_confirmation": false,
    "sound_feedback": true,
    "visual_feedback": true
  }
}